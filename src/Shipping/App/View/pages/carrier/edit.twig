{% extends 'layout.twig' %}

{% block content %}
    <h2>Transportadoras</h2>

    <div class="row">
        <div class="col-md-4">
            <form action="/transportadoras/atualizar" method="post">
                <fieldset>
                    <legend>Editar</legend>
                    <div class="form-group">
                        <label for="name">Nome:</label>
                        <input type="text" name="name" class="form-control" id="name" value="{{ name }}">
                    </div>
                    <div class="form-group">
                        <label for="name">Ativo:</label>
                        <div class="radio">
                            <label>
                                <input type="radio" name="active"{% if active == 1 %} checked {% endif %} value="1">Sim
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="active"{% if active == 0 %} checked {% endif %} value="0">NÃ£o
                            </label>
                        </div>
                    </div>
                    <input type="hidden" name="id" value="{{ id }}">
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <a href="/transportadoras" class="btn btn-default">Voltar</a>
                </fieldset>
            </form>
        </div>
    </div>


{% endblock %}